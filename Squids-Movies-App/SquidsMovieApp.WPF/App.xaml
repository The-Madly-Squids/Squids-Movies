<Application x:Class="SquidsMovieApp.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SquidsMovieApp.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="GhostWhite"/>
        </Style>
        <DataTemplate x:Key="LogoHeader">
            <Border Height="55" Padding="10" Background="CornflowerBlue">
                <Label VerticalAlignment="Center" FontWeight="Bold" Foreground="GhostWhite" FontSize="20">SquidFlix</Label>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="Footer">
            <DockPanel LastChildFill="False" Background="CadetBlue" Height="55">
                <Button Width="125" Height="25" Content="Exit" DockPanel.Dock="Right" Margin="0,0,15,0" Click="ExitBtnClicked"/>
                <TextBlock Height="25" DockPanel.Dock="Left" Margin="15,0,15,0" Foreground="PowderBlue" Text="Team 8 - 'The Madly Squids' - Project for Telerik Academy Alpha Database course - 2018 "/>
            </DockPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
